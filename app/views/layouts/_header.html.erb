<header>
<% logo = image_tag("logo.png", :alt=>"Sample App",
                    :style=>"float:left;") %>
  <%= link_to logo, root_path %>
  <nav>
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Help", help_path %></li>
      <li><% unless signed_in? %>
        <%= link_to "Sign in", signin_path %>
      <% else %>
        <%= link_to "Sign Out", signout_path, :method => :delete %>
      <% end %></li>
    </ul>
  </nav>
</header>
